<div style="min-height: 75vh">
    <div class="text-center mb-3">
        <h2>Favourite List</h2>
    </div>
    <div class="p-2 mb-2">
        <div class="card shadow" style="min-height: 40px">
            <div class="row justify-content-evenly p-3">
                <div class="col-sm-2 mb-1">
                    <input type="button" class="btn btn-primary w-100" value="Edit" />
                </div>
                <div id="dropdownContainer" class="col-sm-6 mb-1">
                    <select class="form-select" disabled>
                        <option>Loading....</option>
                    </select>   
                </div>
                <div class="col-sm-2">
                    <input type="button" class="btn btn-primary w-100" value="+" onclick="$('#createListModal').modal('show')" />
                </div>
            </div>
            
        </div>
    </div>
    <div class="p-2">
        <div class="card shadow" id="jokeContainer" style="min-height: 40vh">

        </div>
    </div>
</div>

<div class="modal fade" id="createListModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">

                <h5 class="modal-title">Create List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBody">

                <form id="createListForm">
                    <input type="text" name="listName" class="form-control"/>
                    <input type="submit" value="Add List" class="btn btn-success" />
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/favourite.js"></script>
}
