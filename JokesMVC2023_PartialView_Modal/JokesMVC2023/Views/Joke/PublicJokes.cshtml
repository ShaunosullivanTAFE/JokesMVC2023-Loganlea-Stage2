@model IEnumerable<JokesMVC2023.Models.Data.Joke>

@{
    ViewData["Title"] = "Public Jokes";
}




<div class="text-center w-100">
    <h2>Public Jokes</h2>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-12 border border-dark w-75 rounded-1 p-1 shadow d-flex">
        <form class="row align-items-baseline" asp-action="Search" style="padding:2px !important; width:100% !important">
            <div class="col-sm justify-content-center" style="margin:0px">
                <label style="white-space:nowrap;">Search By Question:</label>
            </div>
            <div class="col-sm justify-content-center">
                <input type="text" style="width: 100%;" name="questionSearch" id="questionSearch" />
            </div>
            <div class="col-sm justify-content-center">
                <label style="white-space:nowrap;">Search By Answer:</label>
            </div>
            <div class="col-sm justify-content-center">
                <input type="text" style="width: 100%;" name="answerSearch" id="questionSearch" />
            </div>
            <div class="col-sm-2 justify-content-center">
                <input type="submit" class="btn back-colour-2 text-colour" value="Search" />
            </div>
        </form>
    </div>
</div>


<div class="text-center w-100 mt-2">
    <a class="btn back-colour-2 text-colour" asp-action="Create">Create New Joke</a>
    </div>

<div class="border border-light shadow rounded mt-2 d-flex justify-content-center row" style="max-height:60vh; overflow-y:scroll">

    @foreach(var item in Model){
        <div class="card border-dark w-75 m-2 p-2 shadow back-colour-4">
            <div class="row p-2">
                <div class="col-3 border-end">
                    <label>Joke Question</label>
                </div>
                <div class="col">
                    @item.JokeQuestion
                </div>
            </div>
            <div class="row p-2">
                <div class="col-3 border-end">
                    <label>Joke Answer</label>
                </div>
                <div class="col">
                    @item.JokeAnswer
                </div>
            </div>
            <div class="row p-2">
                <div class="col-3 border-end">
                    <label>Options</label>
                </div>
                <div class="col-9">
                    <div class="row d-flex">
                        <div class="col d-flex justify-content-center">
                            <a class="btn back-colour-1 text-colour" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <a class="btn back-colour-1 text-colour" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                        <div class="col d-flex justify-content-center">
                            <a class="btn back-colour-1 text-colour" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    }

</div>

